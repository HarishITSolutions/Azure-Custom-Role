{
  "properties": {
    "Name": "GEV-Audit Subnet without NSG",
    "displayName": "GEV-Audit Subnet without NSG",
    "policyType": "Custom",
    "mode": "All",
    "description": "GEV-Policy will audit if Subnet does not contain NSG (LIMITED ONLY)",
    "metadata": {
      "version": "1.0.0",
      "category": "General"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks/subnets"
          },
			{
			  "not": {
				"field": "name",
				"equals": "GatewaySubnet"
			  }
			},
          {
            "field": "Microsoft.Network/virtualNetworks/subnets/networkSecurityGroup.id",
            "exists": "false"
          }
        ]
      },
      "then": {
        "effect": "${effect}"
      }
    }
  }
}