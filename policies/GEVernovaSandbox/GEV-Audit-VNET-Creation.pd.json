{
  "properties": {
    "Name": "GEV-Audit-VNet-Peering",
    "displayName": "GEV-Audit VNET Creation",
    "policyType": "Custom",
    "mode": "All",
    "description": "GEV-Audits the creation of VNET within an subscription",
    "metadata": {
      "version": "1.0.0",
      "category": "General"
    },
    "parameters": {},
    "policyRule": {
      "if": {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
      },
      "then": {
        "effect": "${effect}"
      }
    }
  }
}