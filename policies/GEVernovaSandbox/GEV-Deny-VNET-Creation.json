{
  "properties": {
	"Name": "GEV-Deny VNET Creation",
    "displayName": "GEV-Deny VNET Creation",
    "policyType": "Custom",
    "mode": "All",
    "description": "GEV-This policy is to be used to deny vnet creation",
    "metadata": {
      "version": "1.0.0",
      "category": "General"
    },
    "parameters": {
		"effect": {
		  "type": "String",
		  "metadata": {
			"displayName": "Effect",
			"description": "The effect determines what happens when the policy rule is evaluated to match"
		  },
		  "allowedValues": [
			"Deny",
			"Disabled"
		  ],
		  "defaultValue": "Disabled"
		}
	  },
    "policyRule": {
		"if": {
		  "allOf": [
			{
			  "field": "type",
			  "equals": "Microsoft.Network/virtualNetworks"
			}
		  ]
		},
      "then": {
        "effect": "deny"
      }
    }
  }
}